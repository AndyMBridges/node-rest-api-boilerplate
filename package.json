{
  "name": "node-api-es6-boilerplate",
  "version": "0.7.0",
  "description": "Starter project for an ES6 RESTful Express API",
  "main": "index.js",
  "scripts": {
    "build": "npm run clean && babel app -d build",
    "clean": "rm -rf build && mkdir build",
    "seed": "NODE_ENV=development babel-node app/config/seed",
    "start": "concurrently 'npm run server:dev' 'npm run scripts'",
    "server:dev": "nodemon --ignore ./app/scripts --ignore ./app/public",
    "styles": "node-sass -w -r app/styles/app.scss app/public/styles/app.css",
    "scripts": "webpack --progress --watch",
    "test": "NODE_ENV=test mocha --recursive --reporter spec --compilers js:babel-register tests",
    "test:watch": "nodemon --exec 'npm run test' tests",
    "coverage": "NODE_ENV=test babel-node ./node_modules/.bin/isparta cover _mocha -- --recursive --reporter spec --compilers js:babel-register tests",
    "validate": "npm run test && npm outdated --depth 0"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/kylealwyn/node-api-es6-boilerplate.git"
  },
  "keywords": [
    "express",
    "es6",
    "restful",
    "api"
  ],
  "author": "Kyle Alwyn <kjalwyn@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/kylealwyn/node-api-es6-boilerplate/issues"
  },
  "homepage": "https://github.com/kylealwyn/node-api-es6-boilerplate",
  "dependencies": {
    "babel-core": "^6.18.0",
    "bcrypt": "^0.8.7",
    "body-parser": "^1.15.2",
    "bootstrap-sass": "^3.3.7",
    "connect-mongo": "^1.3.2",
    "cors": "^2.8.1",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "express-session": "^1.14.2",
    "helmet": "^3.1.0",
    "jade": "^1.11.0",
    "jquery": "^3.1.1",
    "jsonwebtoken": "^7.1.0",
    "lodash": "^4.16.4",
    "method-override": "^2.3.6",
    "mongoose": "^4.6.5",
    "morgan": "^1.7.0",
    "multer": "^1.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.9",
    "babel-preset-es2015": "^6.18.0",
    "babel-register": "^6.18.0",
    "chai": "^3.5.0",
    "chai-http": "^3.0.0",
    "concurrently": "^3.1.0",
    "css-loader": "^0.26.1",
    "eslint": "^3.8.1",
    "eslint-config-google": "^0.7.1",
    "eslint-plugin-babel": "^4.0.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "faker": "^3.1.0",
    "file-loader": "^0.9.0",
    "isparta": "^4.0.0",
    "mocha": "^3.1.2",
    "node-sass": "^3.13.1",
    "nodemon": "^1.11.0",
    "postcss-loader": "^1.2.1",
    "sass-loader": "^4.0.2",
    "style-loader": "^0.13.1",
    "url-loader": "^0.5.7",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2"
  }
}
